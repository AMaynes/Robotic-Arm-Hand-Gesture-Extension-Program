<?xml version="1.0"?>
<robot name="Dobot Magician">

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.158 0.158 0.05"/> <!-- Square base -->
      </geometry>
      <origin xyz="0 0 0.025"/>
    </visual>
  </link>

  <!-- Joint 1 -->
  <joint name="joint_1" type="revolute">
    <parent link="base_link"/>
    <child link="link_0"/>
    <origin xyz="0 0 0.0"/> <!-- Connects to link_0 -->
    <axis xyz="0 0 1"/> <!-- Rotates about z-axis -->
    <limit lower="-1.5708" upper="1.5708" effort="10" velocity="1"/>
  </joint>

  <!-- Link 0 (vertical column connecting J1 and J2) -->
  <link name="link_0">
    <visual>
      <geometry>
        <box size="0.01 0.01 0.138"/> <!-- Vertical column -->
      </geometry>
      <origin xyz="0 0 0.069"/> <!-- Frame is at the bottom; move geometry up -->
    </visual>
  </link>

  <!-- Joint 2 -->
  <joint name="joint_2" type="revolute">
    <parent link="link_0"/>
    <child link="link_1"/>
    <origin xyz="0 0 0.138"/> <!-- Connects to the top of link_0 -->
    <axis xyz="0 1 0"/> <!-- Rotates about y-axis -->
    <limit lower="0.0873" upper="1.3963" effort="10" velocity="1"/>
  </joint>

  <!-- Link 1 -->
  <link name="link_1">
    <visual>
      <geometry>
        <box size="0.02 0.02 0.135"/> <!-- Link 1 -->
      </geometry>
      <origin xyz="0.0 0 0.0675"/> <!-- Shift geometry so frame is at one end -->
    </visual>
  </link>

  <!-- Joint 3 WRONG -->
  <joint name="joint_3" type="revolute">
    <parent link="link_1"/>
    <child link="link_2"/>
    <origin xyz="0.0 0 0.135"/> <!-- At the end of link_1 -->
    <axis xyz="0 1 0"/> <!-- Rotates about y-axis -->
    <limit lower="-1.6808" upper="1.1" effort="10" velocity="1"/>
  </joint>

  <!-- Link 2 -->
  <link name="link_2">
    <visual>
      <geometry>
        <box size="0.147 0.02 0.02"/> <!-- Link 2 -->
      </geometry>
      <origin xyz="0.0735 0 0"/> <!-- Shift geometry so frame is at one end -->
    </visual>
  </link>

